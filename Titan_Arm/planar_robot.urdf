<robot name="pi_robot">

	<!-- * * * Link Definitions * * * -->
<link name="base_link">
		<visual>
		    <origin xyz="0 0 0.1" rpy="0 0 0"/>
			<geometry>
				<cylinder radius="0.3" length="0.18"/>
			</geometry>
			<material name="pink1">
	       		<color rgba="0.6 0.3 0.4 1.0"/>
	     	</material>
		</visual>	
	</link>

<link name="rev1">
		<visual>
			<origin xyz="0 0 0.24" rpy="0 0 0"/>
			<geometry>
				<cylinder radius="0.18" length="0.1"/>
			</geometry>
	     	<material name="orange1">
				<color rgba="0.7 0.2 0.0 1.0"/>
			</material>
	   </visual>
	</link>


<link name="link1">
		<visual>
			<origin xyz="0 0 0.5" rpy="0 0 0"/>
			<geometry>
				<cylinder radius="0.03" length="0.58"/>
			</geometry>
	     	<material name="pink2">
				<color rgba="0.6 0.3 0.4 1.0"/>
			</material>
	   </visual>
	</link>

<link name="link2">
		<visual>
		    <origin xyz="0 0 0.828" rpy="0 1.570 0"/>
			<geometry>
				<cylinder radius="0.04" length="0.08"/>
			</geometry>
			<material name="orange2">
	       		<color rgba="0.7 0.2 0.0 1.0"/>
	     	</material>
		</visual>	
	</link>

<link name="link3">
		<visual>
			<origin xyz="0 0.245 0.828" rpy="1.57 0 0"/>
			<geometry>
				<cylinder radius="0.03" length="0.42"/>
			</geometry>
	     	<material name="pink3">
				<color rgba="0.6 0.3 0.4 1.0"/>
			</material>
	   </visual>
	</link>

	<link name="pris1">
		<visual>
			<origin xyz="0 0.46 0.828" rpy="1.57 0 0"/>
			<geometry>
				<cylinder radius="0.02" length="0.37"/>
			</geometry>
	     	<material name="green1">
				<color rgba="0.0 0.2 0.0 1.0"/>
			</material>
	   </visual>
	</link>

	<link name="gripper_base">
		<visual>
			<origin xyz="0 0.67 0.828" rpy="1.57 0 0"/>
			<geometry>
				<cylinder radius="0.04" length="0.050"/>
			</geometry>
	     	<material name="blue1">
				<color rgba="0 0.5 0.5 0"/>
			</material>
	   </visual>
  </link>


	
<!-- * * * Joint Definitions * * * -->
  <joint name="joint1" type="revolute">
    	<parent link="base_link"/>
    	<child link="rev1"/>
    	<origin xyz="0 0 0" rpy="0 0 0"/>
        <limit lower="-3.164" upper="3.164" effort="10" velocity="3"/>
        <axis xyz="0 0 1"/>
	</joint>
	
	<joint name="fixed1" type="fixed">
    	<parent link="link1"/>
    	<child link="link2"/>
    	<origin xyz="0 0 0" rpy="0 0 0"/>
	</joint>
<joint name="joint2" type="revolute">
    	<parent link="rev1"/>
    	<child link="link1"/>
    	<origin xyz="0 0 0" rpy="0 0 0"/>
        <limit lower="-1.47" upper="1.47" effort="10" velocity="3"/>
        <axis xyz="1 0 0"/>
	</joint>
<joint name="prisjoint1" type="prismatic">
    	<parent link="link3"/>
    	<child link="pris1"/>
    	<origin xyz="0 0 0" rpy="0 0 0"/>
       	<limit lower="-0.16" upper="0.16" effort="10" velocity="3"/>
        <axis xyz="0 1 0"/>
	</joint>
<joint name="fixed2" type="fixed">
    	<parent link="link2"/>
    	<child link="link3"/>
    	<origin xyz="0 0 0" rpy="0 0 0"/>
	</joint>


<joint name="fixed3" type="fixed">
    	<parent link="pris1"/>
    	<child link="gripper_base"/>
    	<origin xyz="0 0 0" rpy="0 0 0"/>
	</joint>

</robot>

